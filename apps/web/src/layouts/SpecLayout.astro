---
import BaseLayout from "./BaseLayout.astro";

interface Props {
    title?: string;
}
const { title = "Specification - UJM" } = Astro.props;
---

<BaseLayout title={title}>
    <main class="spec-content">
        <slot />
    </main>
    <footer class="spec-footer">
        <hr />
        <p>Generated by Speculator (UJM Specification)</p>
    </footer>
</BaseLayout>

<style>
    .spec-footer {
        max-width: 900px;
        margin: 0 auto;
        padding: var(--spacing-lg);
        color: var(--color-muted);
        font-size: 0.875rem;
    }

    .spec-footer hr {
        border: none;
        border-top: 1px solid var(--color-border);
        margin-bottom: var(--spacing-md);
    }

    .spec-footer p {
        margin: 0;
    }
</style>
